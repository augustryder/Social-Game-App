<%- include('../partials/header') %>

<div class="center-container">
    <div class="profile-box">
        <h1>USER_PROFILE</h1>
        
        <div class="profile-section">
            <div class="section-header">USER_DATA</div>
            <div class="profile-data-container">
                <div class="profile-data">
                    <span class="data-label">USERNAME:</span>
                    <span class="data-value"><%= username %></span>
                </div>
                <div class="profile-data">
                    <span class="data-label">EMAIL:</span>
                    <span class="data-value"><%= email %></span>
                </div>
                <div class="profile-data">
                    <span class="data-label">JOIN_DATE:</span>
                    <span class="data-value"><%= joinDate %></span>
                </div>
                <div class="profile-data">
                    <span class="data-label">STATUS:</span>
                    <span class="data-value"><%= accountStatus %></span>
                </div>
            </div>
        </div>
        
        <div class="profile-section">
            <div class="section-header">GAME_STATS</div>
            <div class="profile-data-container">
                <div class="profile-data">
                    <span class="data-label">HIGH_SCORE:</span>
                    <span class="data-value"><%= highScore %></span>
                </div>
                <div class="profile-data">
                    <span class="data-label">GAMES_PLAYED:</span>
                    <span class="data-value"><%= gamesPlayed %></span>
                </div>
            </div>
        </div>
        
        <div class="profile-actions">
        
        
        <div class="back-link">
            <a href="/home">> RETURN TO HOME</a>
        </div>
        <div class="back-link">
            <form id="delete-account-form" action="/deleteaccount" method="POST" style="display: inline;">
                <button type="submit" class="delete-button">
                    > DELETE ACCOUNT
                </button>
            </form>
        </div>
        <div class="back-link">
            <a href="/changeusername">
                > CHANGE USERNAME
            </a>
        </div>
    </div>
    <script>
        document.getElementById('delete-account-form').addEventListener('submit', function(event) {
            if (!confirm('Are you sure you want to delete your account? This action cannot be undone.')) {
                event.preventDefault(); // Prevent form submission if user clicks Cancel
            }
        });
    </script>
</div>

