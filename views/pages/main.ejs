<%- include('../partials/header') %>

<div class="main-container">
    <div class="username-container">
        <h1 class="username-title">Welcome, <%= username %>!</h1>
    </div>
    
    <div class="game-container">
        <div class="circles-container">
            <div class="circle-box">
                <div class="circle-header">CIRCLE_01</div>
                <div class="circle-content">
                    <div class="friend-entry">>FRIEND_01</div>
                    <div class="friend-entry">>FRIEND_02</div>
                    <div class="friend-entry">>FRIEND_03</div>
                </div>
            </div>
            
            <div class="circle-box">
                <div class="circle-header">CIRCLE_02</div>
                <div class="circle-content">
                    <div class="friend-entry">>FRIEND_01</div>
                    <div class="friend-entry">>FRIEND_02</div>
                    <div class="friend-entry">>FRIEND_03</div>
                </div>
            </div>
            
            <div class="circle-box">
                <div class="circle-header">CIRCLE_03</div>
                <div class="circle-content">
                    <div class="friend-entry">>FRIEND_01</div>
                    <div class="friend-entry">>FRIEND_02</div>
                    <div class="friend-entry">>FRIEND_03</div>
                </div>
            </div>
        </div>
        
        <div class="button-container">
            <button class="start-button">[ START GAME ]</button>
        </div>
    </div>
</div>

<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #0A0A18;
        color: #E1E1FF;
        font-family: 'VT323', monospace, 'Courier New', Courier;
        overflow: hidden;
        height: 100vh;
    }
    
    .main-container {
        display: flex;
        flex-direction: column;
        height: 100vh;
    }
    
    .username-container {
        text-align: center;
        padding: 20px 0;
        background-color: #151528;
        border-bottom: 2px solid #2A2A5C;
    }
    
    .username-title {
        font-size: 2.5rem;
        color: #7AFFB2;
        margin: 0;
        text-shadow: 0 0 10px rgba(122, 255, 178, 0.5);
        letter-spacing: 2px;
    }
    
    .game-container {
        flex: 1;
        background-color: #1A1A2E;
        border: 2px solid #2A2A5C;
        box-shadow: 0 0 20px rgba(42, 42, 92, 0.3) inset;
        margin: 20px;
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
    
    .circles-container {
        display: flex;
        justify-content: space-between;
        flex: 1;
        gap: 20px;
        padding: 10px 0;
    }
    
    .circle-box {
        background-color: #1A1A2E;
        border: 2px solid #3A3A7E;
        width: 100%;
        display: flex;
        flex-direction: column;
    }
    
    .circle-header {
        background-color: #2A2A4E;
        color: #FF9B50;
        padding: 10px;
        text-align: center;
        font-size: 1.2rem;
        font-weight: bold;
        border-bottom: 2px solid #3A3A7E;
        letter-spacing: 1px;
    }
    
    .circle-content {
        background-color: #131328;
        padding: 20px;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        overflow-y: auto;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5) inset;
    }
    
    .friend-entry {
        color: #5D8DFF;
        font-size: 1.1rem;
        margin: 12px 0;
        text-align: left;
        transition: all 0.3s;
        cursor: pointer;
    }
    
    .friend-entry:hover {
        color: #7AFFB2;
        transform: translateX(5px);
    }
    
    .button-container {
        display: flex;
        justify-content: center;
        padding: 20px 0;
    }
    
    .start-button {
        background-color: transparent;
        color: #4AFF8F;
        border: 3px solid #4AFF8F;
        padding: 15px 40px;
        font-size: 1.5rem;
        font-family: inherit;
        cursor: pointer;
        transition: all 0.3s;
        letter-spacing: 3px;
        text-shadow: 0 0 5px rgba(74, 255, 143, 0.5);
        box-shadow: 0 0 10px rgba(74, 255, 143, 0.3);
    }
    
    .start-button:hover {
        background-color: rgba(74, 255, 143, 0.2);
        box-shadow: 0 0 20px rgba(74, 255, 143, 0.5);
        transform: scale(1.05);
    }
    
    .game-container::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: repeating-linear-gradient(
            0deg,
            rgba(0, 0, 0, 0.1),
            rgba(0, 0, 0, 0.1) 1px,
            transparent 1px,
            transparent 2px
        );
        pointer-events: none;
        opacity: 0.3;
        z-index: 1;
    }
    
    .circles-container, .button-container {
        position: relative;
        z-index: 2;
    }
    
    @keyframes subtle-glow {
        0% { box-shadow: 0 0 5px rgba(93, 141, 255, 0.3); }
        50% { box-shadow: 0 0 15px rgba(93, 141, 255, 0.5); }
        100% { box-shadow: 0 0 5px rgba(93, 141, 255, 0.3); }
    }
    
    .circle-box {
        animation: subtle-glow 3s infinite;
    }
</style>