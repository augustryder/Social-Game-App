<%- include('../partials/header') %>

    <div class="container mx-auto py-8">
        <div class="bg-terminal-accent p-8 rounded-lg shadow-lg">
            <div class="flex flex-col md:flex-row items-center">
                <img src="<%= character.image %>" alt="<%= character.name %>"
                    class="w-full md:w-1/3 h-auto object-cover rounded-lg mb-4 md:mb-0 md:mr-8">
                <div class="text-center md:text-left">
                    <h1 class="text-3xl font-bold text-terminal-green mb-4">
                        <%= character.name %>
                    </h1>
                    <p class="text-terminal-light-gray mb-4">
                        <%= character.description %>
                    </p>
                    <h2 class="text-2xl font-bold text-terminal-green mb-4">Preferences</h2>
                    <ul class="list-none">
                        <% preferences.forEach(preference=> { %>
                            <li class="text-terminal-light-gray mb-2">
                                <%= preference.name %>: <%= preference.description %>
                            </li>
                            <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>